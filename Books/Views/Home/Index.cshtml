@model IEnumerable<Book>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav>
    <a href="/Home/CreateBook">Create new Book</a>
</nav>

<h2>My Books</h2>

<table border="1" cellpadding="8" cellspacing="0">
    <thead>
        <tr>
            <th>Edit</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Copyright</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Book book in Model)
            {
                <tr>
                    <td>
                        <a href="/Home/UpdateBook/@book.Id">Update</a>
                        <a href="/Home/DeleteBook/@book.Id">Delete</a>
                    </td>
                    <td>@book.Title</td>
                    <td>@book.AuthorFirstName</td>
                    <td>@book.AuthorLastName</td>
                    <td>@book.Copyright</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" align="center">No Books Found</td>
            </tr>
        }
    </tbody>
</table>